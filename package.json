{
  "name": "tpl-lib-ts",
  "version": "1.0.0",
  "description": "library typescript template",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "docs": "dumi dev",
    "build:docs": "dumi build",
    "preview:docs": "anywhere -d ./docs_dist",
    "start": "cross-env NODE_ENV=development BUILD_ENV=local webpack-dev-server --config build/webpack.dev.conf.js",
    "build": "cross-env NODE_ENV=production BUILD_ENV=prod node build/build.js",
    "version:major": "standard-version --release-as major",
    "version:minor": "standard-version --release-as minor",
    "version:patch": "standard-version --release-as patch",
    "version:first": "standard-version --first-release",
    "release": "pnpm build && pnpm release:only",
    "release:only": "npm publish --registry=https://registry.npmjs.com/"
  },
  "keywords": [
    "library",
    "typescript",
    "template"
  ],
  "author": "enforcer.a06@gmail.com",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
